<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    
    <RelativeLayout
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/pet_detail_bg"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:orientation="horizontal">

            <com.voocoo.pet.common.widgets.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:type="circle"
                android:src="@mipmap/ic_launcher_round"/>

            <LinearLayout
                android:layout_toRightOf="@+id/iv_head"
                android:layout_alignTop="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="123  >"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:textColor="@color/color_ffffff"/>

                <TextView
                    android:id="@+id/tv_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="123"
                    android:drawablePadding="10dp"
                    android:textColor="@color/color_ffffff"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/custom_toolbar" />


    <com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        app:guidance_text_color="@color/color_tab_select"
        android:layout_below="@+id/iv_top"
        app:guidance_view_bg_color="@android:color/transparent"
        app:load_text="加载更多"
        app:progress_bar_color="@color/color_tab_select"
        app:refresh_text="下拉刷新"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"/>

    </com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>

</RelativeLayout>