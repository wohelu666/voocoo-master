<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mine_gradient"
    android:fitsSystemWindows="true">

    <include layout="@layout/custom_toolbar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llupdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:id="@+id/llIsinstall"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ivIs"
                android:src="@mipmap/rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>


            <TextView
                android:layout_marginTop="5dp"
                android:text="正在安装中....."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/llIsinstall"
            android:id="@+id/llprogress"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="7sp"
                android:id="@+id/tvProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0%"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tips5">

            </TextView>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress"
                android:id="@+id/pbProgress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:max="100"
                app:layout_constraintTop_toBottomOf="@+id/tvProgress">

            </ProgressBar>

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/isDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/llmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ota">

            </ImageView>

            <TextView
                android:id="@+id/tvNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isNewVersion"
                android:textColor="#000"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:id="@+id/tvCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="当前版本：v1.0.1"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llcontent"
            android:visibility="gone"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Tips"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tips1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="@string/Tips1"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tips">

                </TextView>

                <TextView
                    android:id="@+id/tips2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Tips2"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tips1">

                </TextView>

                <TextView
                    android:id="@+id/tips3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Tips3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tips2">

                </TextView>

                <TextView
                    android:id="@+id/tips4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Tips4"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tips3"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tips5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Tips5"

                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tips4"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_able"
            android:text="@string/now_update"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llfail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_add_fail" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/update_fail"
            android:textColor="#282A30"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/please_try_update"
                android:textColor="#282A30"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/please_try_update1"
                android:textColor="#6A6B71"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/please_try_update2"
                android:textColor="#6A6B71"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/please_try_update3"
                android:textColor="#6A6B71"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/please_try_update4"
                android:textColor="#6A6B71"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>