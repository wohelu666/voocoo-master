        <attr format="color" name="sel_background_border_pressed"/>
        <attr format="color" name="sel_background_border_selected"/>
        <attr format="color" name="sel_background_border_disable"/>

        <!-- ripple水波纹效果-->
        <attr format="reference|color" name="sel_background_ripple"/>
        <attr format="reference|color" name="sel_background_ripple_mask"/>
        <!-- ripple mask形状(仅在sel_background_ripple_mask为color时生效)-->
        <attr format="enum" name="sel_background_ripple_mask_shape">
            <enum name="rect" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
