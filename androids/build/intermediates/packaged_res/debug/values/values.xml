    <declare-styleable name="ScrollPickerView">
        <!-- 中间item的背景-->
        <attr format="reference|color" name="spv_center_item_background"/>
        <!-- 可见的item数量，默认为3个-->
        <attr format="integer" name="spv_visible_item_count"/>
        <!-- 中间item的位置,默认为 mVisibleItemCount / 2-->
        <attr format="integer" name="spv_center_item_position"/>
        <!-- 是否循环滚动，默认为true，开启-->
        <attr format="boolean" name="spv_is_circulation"/>
        <!-- 不允许父组件拦截触摸事件，设置为true为不允许拦截，此时该设置才生效 -->
        <attr format="boolean" name="spv_disallow_intercept_touch"/>
        <!-- 滚动的方向-->
        <attr format="string" name="spv_orientation">
            <enum name="horizontal" value="1"/>
            <enum name="vertical" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SelectorAttrs">
        <!-- selector相关属性-->
        <!-- 背景状态 -->
        <attr format="reference|color" name="sel_background_pressed"/>
        <attr format="reference|color" name="sel_background_selected"/>
        <attr format="reference|color" name="sel_background_disable"/>

        <!-- 背景形状 -->
        <attr format="enum" name="sel_background_shape">
            <enum name="rect" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
            <enum name="ring" value="3"/>
        </attr>
        <!-- 背景圆角 -->
        <attr format="dimension" name="sel_background_corners"/>
        <attr format="dimension" name="sel_background_corner_topLeft"/>
        <attr format="dimension" name="sel_background_corner_topRight"/>
        <attr format="dimension" name="sel_background_corner_bottomLeft"/>
        <attr format="dimension" name="sel_background_corner_bottomRight"/>

        <!-- 背景边框默认状态 -->
        <attr format="color" name="sel_background_border_color"/>
        <attr format="dimension" name="sel_background_border_width"/>
