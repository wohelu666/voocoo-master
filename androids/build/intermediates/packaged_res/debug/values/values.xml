    <declare-styleable name="PaddingViewAttrs">
        <!--src content的确切宽度，必填-->
        <attr format="dimension" name="vp_content_width"/>
        <!--src content的确切高度，必填-->
        <attr format="dimension" name="vp_content_height"/>
        <!--src content的padding，在未设置的情况下默认为居中效果-->
