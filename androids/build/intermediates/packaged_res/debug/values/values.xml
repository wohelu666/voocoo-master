    <dimen name="androids_api27_config_minScalingSpan">27mm</dimen>
    <declare-styleable name="BitmapScrollPicker">
        <!-- 绘制图片的方式-->
        <attr format="string" name="spv_draw_bitmap_mode">
            <enum name="fill" value="1"/>
            <enum name="center" value="2"/>
            <enum name="size" value="3"/>
        </attr>
        <!-- 绘制图片的方式为size时，指定的图片绘制大小-->
        <attr format="dimension" name="spv_draw_bitmap_width"/>
        <attr format="dimension" name="spv_draw_bitmap_height"/>
        <!-- item内容缩放倍数-->
        <attr format="float" name="spv_min_scale"/>
        <attr format="float" name="spv_max_scale"/>
    </declare-styleable>
    <declare-styleable name="MaskImageView">
        <!-- 遮罩的层面:背景\前景图-->
        <attr format="enum" name="miv_mask_level">
            <enum name="background" value="1"/>
            <enum name="foreground" value="2"/>
        </attr>
        <!-- 设置了setClickable(true)才生效,默认开启遮罩-->
        <attr format="boolean" name="miv_is_show_mask_on_click"/>
        <attr format="color" name="miv_mask_color"/>
        <!--是否忽略图片的透明度，默认为true,透明部分不显示遮罩 -->
        <attr format="boolean" name="miv_is_ignore_alpha"/>
        <!--按下时view的透明度-->
        <attr format="float" name="miv_pressed_alpha"/>

