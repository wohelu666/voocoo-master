        <attr format="dimension" name="vp_content_padding_top"/>
        <attr format="dimension" name="vp_content_padding_right"/>
        <attr format="dimension" name="vp_content_padding_bottom"/>
    </declare-styleable>
    <declare-styleable name="RatioImageView">

        <!-- 宽度是否根据src图片的比例来测量（高度已知） -->
        <attr format="boolean" name="riv_is_width_fix_drawable_size_ratio"/>
        <!-- 高度是否根据src图片的比例来测量（宽度已知） -->
        <attr format="boolean" name="riv_is_height_fix_drawable_size_ratio"/>
        <!--当mIsWidthFitDrawableSizeRatio生效时，最大宽度-->
        <attr format="dimension" name="riv_max_width_when_width_fix_drawable"/>
        <!--当mIsHeightFitDrawableSizeRatio生效时-->
        <attr format="dimension" name="riv_max_height_when_height_fix_drawable"/>
        <!-- 高度设置，参考宽度，如0.5 , 表示 高度＝宽度×０.5 -->
        <attr format="float" name="riv_height_to_width_ratio"/>
        <!-- 宽度设置，参考高度，如0.5 , 表示 宽度＝高度×０.5 -->
        <attr format="float" name="riv_width_to_height_ratio"/>
        <!--宽度和高度,避免layout_width/layout_height会在超过屏幕尺寸时特殊处理的情况-->
        <attr format="dimension" name="riv_width"/>
        <attr format="dimension" name="riv_height"/>

